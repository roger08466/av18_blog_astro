---
import Header from '../components/Header/index.jsx';
import Footer from '../components/Footer/index.jsx';

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- Use the favicon copied from CF_PAGE -->
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<!-- Title can be dynamic -->
		<title>{title || 'AV18 Blog'}</title>
	</head>
	<body class="flex flex-col min-h-screen">
		<!-- Use client:load to hydrate the React component immediately -->
		<Header client:load />
		<main class="flex-grow">
			<slot /> <!-- Page content goes here -->
		</main>
		<Footer client:load />
	</body>
</html>

<style is:global>
	/* Ensure container class is defined if not in global.css */
	.container {
		max-width: 1280px; /* Example width */
		margin-left: auto;
		margin-right: auto;
		padding-left: 1rem;
		padding-right: 1rem;
	}
	/* Ensure html, body styles are applied globally if needed */
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
